PURPLE = $(shell printf "\33[35m")
TITLE = $(shell printf "\33[32;40m")

CC = cc
CFLAGS = -Wall -Wextra -Werror #-g -fsanitize=thread -O1
NAME = philo
RM = rm -rf

SRC_DIR = src/
OBJ_DIR = obj/

SRC = src/main.c \
	  src/ft_utlis.c \
	  src/syntax_error.c \
	  src/parsing.c \
	  src/init_data.c \
	  src/manager_thread.c \
	  src/get_time.c \
	  src/philo_routine.c \
	  src/eating_process.c \
	 src/monitor_death.c

OBJ = $(patsubst $(SRC_DIR)%.c, $(OBJ_DIR)%.o, $(SRC))

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
